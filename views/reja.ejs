<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Harid</title>
    <!-- <link rel="stylesheet" href="/css/style.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body style="background-color: #b8bbd1">
    <div class="container">
        <h1 class="display-4 text-center py-1">REJA VA MAQSADLAR</h1>
        <div class=" p-3 shadow-sm bg-light rounded">
            <form id="create-form" action="/create-item" method="POST">
                <div class="d-flex align-items-center">
                    <input type="text" id="create-field" name="reja" autofocus autocomplete="off" class="form-control me-3" style="flex: 1">
                    <button class="btn btn-primary p-3" style="border-radius: 20px; margin-left: 8px;  font-size: 20px">
                        Yangi reja qo'shish
                    </button>
                </div>
            </form>
        </div>

        <ul id="item-list" class="list-group pb-5 mt-5">
            <% items.map(function(item){%>
            <li class="list-group-item list-group-item-info d-flex align-items-center justify-content-between">
                <span class="item-text"><%= item.reja %></span>
                <div class="d-flex"> 
                    <button data-id="<%=item._id%>" class="edit-me btn btn-secondary btn-sm ms-2">
                        O'zgartirish
                    </button>
                    <button data-id="<%=item._id%>" class="delete-me btn btn-danger btn-sm ms-2">
                            O'chirish
                    </button>
                </div>
            </li>
            <%})%>
        </ul>

        <button id="clean-all" class="btn btn-danger mt-5 p-3" style="border-radius: 20px; font-size: 20px">
            Hamma rejalarni o'chirish
        </button>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/browser.js"></script>
</body>
</html>